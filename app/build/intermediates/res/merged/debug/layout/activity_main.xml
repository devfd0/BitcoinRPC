<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	android:id="@+id/muestraVersion"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:stretchColumns="*">
<TableRow
	android:id="@+id/tableRow5"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="15dip"
	android:orientation="horizontal">
<TextView
	android:id="@+id/TextView04"
	android:layout_height="match_parent"
	android:text="@string/fecha"
	android:textSize="20sp"
	android:layout_weight="0.25"
	android:layout_width="0dp"/>
<TextView
	android:id="@+id/TextView03"
	android:layout_height="match_parent"
	android:textSize="20sp"
	android:layout_weight="0.75"
	android:layout_width="0dp"/>
</TableRow>
<TableRow
	android:id="@+id/tableRow6"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="10dip"	
	android:orientation="horizontal">
<TextView
	android:id="@+id/TextView05"
	android:layout_height="match_parent"
	android:text="@string/nombreServidor"
	android:textSize="20sp"
	android:layout_weight="0.25"
	android:layout_width="0dp"
	/>
<TextView
	android:id="@+id/TextView06"
	android:layout_height="match_parent"
	android:textSize="20sp"
	android:layout_weight="0.75"
	android:layout_width="0dp"
	/>
</TableRow>
<TableRow
	android:id="@+id/tableRow1"
	android:layout_marginTop="10dip"	
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">
<TextView
	android:id="@+id/textView2"
	android:layout_height="match_parent"
	android:text="@string/balance"
	android:textSize="20sp"
	android:layout_weight="0.25"
	android:layout_width="0dp"/>
<TextView
	android:id="@+id/muestraBalance"
	android:layout_height="match_parent"
	android:textSize="20sp"
	android:layout_weight="0.75"
	android:layout_width="0dp"
	/>
</TableRow>
<TableRow
	android:id="@+id/tableRow2"
	android:layout_marginTop="10dip"	
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">
<TextView
	android:id="@+id/textoDialogo"
	android:layout_height="match_parent"
	android:text="@string/version"
	android:textSize="20sp"
	android:layout_weight="0.25"
	android:layout_width="0dp"/>
<TextView
	android:id="@+id/TextView01"

	android:layout_height="match_parent"
	android:textSize="20sp"
	android:layout_weight="0.75"
	android:layout_width="0dp"/>
</TableRow>
<TableRow
	android:id="@+id/tableRow3"
	android:layout_marginTop="10dip"	
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">
<TextView
	android:id="@+id/textView3"
	android:layout_height="match_parent"
	android:text="@string/conexiones"
	android:textSize="20sp"
	android:layout_weight="0.3"
	android:layout_width="0dp"/>
<TextView
	android:id="@+id/TextView02"

	android:layout_height="match_parent"
	android:textSize="20sp"
	android:layout_weight="0.7"
	android:layout_width="0dp"/>
</TableRow>
<TableRow
	android:id="@+id/tableRow4"
	android:layout_marginRight="10dip"
    android:layout_marginLeft="10dip"
    android:layout_marginTop="30dip"    
	>
<Button
    android:id="@+id/cancelarEnvio"       
    android:layout_span="2"
    android:text="@string/bActualizar"
    android:textSize="25sp"
	android:textAlignment="center"
	android:textStyle="normal|bold"
	android:layout_marginRight="30dp"
	android:layout_marginLeft="30dp" />

</TableRow>
</TableLayout>
